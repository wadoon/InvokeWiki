	text-align:justify;
}

hr {
	border: 0;
	border-top: 1px navy solid;
	width: 100%;
}

/**
 * Formulare-Eigenschaften

input[type="text"],
input[type="password"],textarea {
	width: 100%;
	border: 1px navy solid;
}

select {
	border: 1px navy solid;
}

input[type="reset"], 
input[type="submit"] 
{ 
	border: 1px navy dotted;
	border-bottom: 2px black solid;
	border-right: 2px black solid;
	background: #CFbFFF;
}

input[type="text"]:hover,input[type="password"]:hover,textarea:hover,select:hover
	{
	border: 1px green solid;
	background: #AABBCC;
}
*/
optgroup {
	background: #ccc;
	color: navy;
}

option {
	background: white;
	color: black;
}
/* Ende formular-eigenschaften */

.error {
	border: red 2px dotted;
	font-weight: 600;
	opacity: .8;
	background: #FF3355;
	padding: 0.3em;
	margin-bottom: 1em;
}

.success {
	border: green 2px dashed;
	opacity: .7;
	filter: alpha(opacity =   70);
	background: #00FF55;
	text-indent: 5em;
	font-weight: 900;
	font-size: 14pt;
}

.done {
	font-style: italic;
	color: grey;
	list-style-image: url(../res/icons/accept.png);
}

h1 {
	color:#404157;
	font-family:"Verdana";
	font-size:19px;
	font-weight:bold;
	letter-spacing:1px;
	text-decoration:none;
}

h2 {
	color:#6D7983;
	font-family:Tahoma;
	font-size:15px;
	font-weight:bold;
}

img {
	border: 0;
}

legend {
	color: navy;
	font-size: 14pt;
}

